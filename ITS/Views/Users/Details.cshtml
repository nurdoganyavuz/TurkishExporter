@model KobiAsITS.Models.User

@{
    ViewData["Title"] = "Detaylar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="...">
    <div class="pager">
        <a href="/Users/Index" class="btn btn-primary"><span aria-hidden="true">&larr;</span> Geri</a>
    </div>
</nav>

<h1 style="text-align:left">Detaylar</h1>

<form asp-action="Details">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kullanıcı Bilgileri</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Uuid" />
                    <input type="hidden" asp-for="PasswordHash" />
                    <input type="hidden" asp-for="PasswordSalt" />

                    <div class="form-group  row">
                        <label asp-for="UserFirstName" class="col-sm-4 col-form-label">Adı</label>

                        <div class="col-sm-8">
                            <input asp-for="UserFirstName" class="form-control" readonly />
                            <span asp-validation-for="UserFirstName" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="UserLastName" class="col-sm-4 col-form-label">Soyadı</label>

                        <div class="col-sm-8">
                            <input asp-for="UserLastName" class="form-control" readonly />
                            <span asp-validation-for="UserLastName" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="Email" class="col-sm-4 col-form-label">Email</label>

                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="CreateDate" class="col-sm-4 col-form-label">Oluşturulma Tarihi</label>

                        <div class="col-sm-8">
                            <input asp-for="CreateDate" class="form-control" readonly />
                            <span asp-validation-for="CreateDate" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="UpdateDate" class="col-sm-4 col-form-label">Güncellenme Tarihi</label>

                        <div class="col-sm-8">
                            <input asp-for="UpdateDate" class="form-control" readonly />
                            <span asp-validation-for="UpdateDate" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="Status" class="col-sm-4 col-form-label">Aktiflik Durumu</label>

                        <div class="col-sm-8">

                            <label asp-validation-for="Status" class="text-danger" disabled>
                                @Html.DisplayFor(model => model.Status)
                            </label>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="Role" class="col-sm-4 col-form-label">Kullanıcı Rolü</label>

                        <div class="col-sm-8">
                            <input asp-for="Role.Name" class="form-control" readonly />
                            <span asp-validation-for="Role.Name" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="Department" class="col-sm-4 col-form-label">Departman</label>

                        <div class="col-sm-8">
                            <input asp-for="Department.DepartmentName" class="form-control" readonly />
                            <span asp-validation-for="Department.DepartmentName" class="text-danger" disabled></span>
                        </div>
                    </div>

                    <nav aria-label="..." style="text-align:right">
                        <div class="pager">
                            <a href="/Users/Edit?Uuid=@Model.Uuid" class="btn btn-primary" ><span aria-hidden="true"></span>Düzenle</a>
                        </div>
                    </nav>

                </div>
            </div>
        </div>
    </div>
</form>