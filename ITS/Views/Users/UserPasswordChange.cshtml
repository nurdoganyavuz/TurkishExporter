@model KobiAsITS.ViewModels.PasswordChangeViewModel
@{
    ViewData["Title"] = "UserPasswordChange";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>


<h1>UserPasswordChange</h1>

<div class="col-md-6">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Şifre Değiştirme</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <form class="m-t" asp-action="PasswordChange" asp-controller="User" method="post">               
                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Yeni Şifreniz" required="">
                </div>
                <div class="form-group">
                    <input asp-for="PasswordRepeat" type="password" class="form-control" placeholder="Yeni Şifreniz Tekrar" required="">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Şifreyi Değiştir</button>
            </form>
        </div>
    </div>
</div>
</html>