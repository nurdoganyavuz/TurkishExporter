@model KobiAsITS.ViewModels.UserPasswordChangeViewModel
@{
    ViewData["Title"] = "Kullanıcı Şifre Değiştirme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<nav aria-label="...">
    <div class="pager">
        <a href="/Home" class="btn btn-primary"><span aria-hidden="true">&larr;</span> Geri</a>
    </div>
</nav>
<br />
@if (TempData["message"] != null)
{
    <div class="alert alert-success alert-dismissable">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        @TempData["message"]
    </div>
    TempData.Remove("message");
}

<h1>Şifre Değiştirme</h1>

<div class="col-md-6">
    <div class="ibox ">
        <div class="ibox-title">
            <h5>Şifre Değiştirme</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <p>Yeni şifrenizi giriniz.</p>
            <form action="@Url.Action("UserPasswordChange", "Users")" method="POST">

                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Yeni Şifreniz" required="">
                </div>
                <div class="form-group">
                    <input asp-for="PasswordRepeat" type="password" class="form-control" placeholder="Yeni Şifreniz Tekrar" required="">
                </div>
                <div class="form-group" style="text-align:right">
                    <input type="submit" value="Şifreyi Değiştir" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>
</div>