@model KobiAsITS.Models.User

@{
    ViewData["Title"] = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="...">
    <div class="pager">
        <a href="/Users/Index" class="btn btn-primary"><span aria-hidden="true">&larr;</span> Geri</a>
    </div>
</nav>

<h1 align="left">Sil</h1>

<form asp-action="Delete">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Kullanıcı</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Uuid" />


                    <div class="form-group  row">
                        <label asp-for="UserFirstName" class="col-sm-4 col-form-label">Adı</label>

                        <div class="col-sm-8">
                            <input asp-for="UserFirstName" class="form-control" readonly />
                            <span asp-validation-for="UserFirstName" class="text-danger" disabled></span>
                        </div>
                    </div>

                    <div class="form-group  row">
                        <label asp-for="UserLastName" class="col-sm-4 col-form-label">Soyadı</label>

                        <div class="col-sm-8">
                            <input asp-for="UserLastName" class="form-control" readonly />
                            <span asp-validation-for="UserLastName" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="Email" class="col-sm-4 col-form-label">Email</label>

                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="CreateDate" class="col-sm-4 col-form-label">Oluşturulma Tarihi</label>

                        <div class="col-sm-8">
                            <input asp-for="CreateDate" class="form-control" readonly />
                            <span asp-validation-for="CreateDate" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="Role" class="col-sm-4 col-form-label">Kullanıcı Rolü</label>

                        <div class="col-sm-8">
                            <input asp-for="Role.Name" class="form-control" readonly />
                            <span asp-validation-for="Role.Name" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="Department" class="col-sm-4 col-form-label">Departman</label>

                        <div class="col-sm-8">
                            <input asp-for="Department.DepartmentName" class="form-control" readonly />
                            <span asp-validation-for="Department.DepartmentName" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group" style="text-align:right">
                        <input type="submit" value="Sil" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>