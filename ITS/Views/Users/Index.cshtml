@model IEnumerable<KobiAsITS.Models.User>

@{
    ViewData["Title"] = "Kullanıcılar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script src="~/pageScripts/Shared/Delete.js"></script>
}

<h1 style="text-align:center">Kullanıcılar</h1>

<p align="right">
    <a asp-action="Create">
        <button type="button" class="btn btn-outline-secondary">Yeni Kullanıcı Ekle</button>
    </a>
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Kayıtlı Kullanıcılar Görüntülenmektedir.</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive" style="text-align:center">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Email</th>
                                <th>Kullanıcı Rolü</th>
                                <th>Departman</th>
                                <th>Durum</th>

                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserFirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserLastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Role.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    @if (item.Status == true)
                                    {
                                        <td align="center">
                                            @Html.ActionLink("Düzenle", "Edit", new { Uuid = item.Uuid }, new { @class = "btn btn-warning btn-sm btn-icon entypo-pencil" }) |
                                            @Html.ActionLink("Detay", "Details", new { Uuid = item.Uuid }, new { @class = "btn btn-info btn-sm btn-icon entypo-pencil" }) |
                                            <a href="javascript:void(0);" data-url="@(Url.Action("DeleteConfirmed", "Users", new { id = item.Id }))" class="btn btn-danger btn-icon entypo-pencil btndelete">Sil</a>
                                        </td>
                                    }
                                    else
                                    {
                                        <td align="center">
                                            @Html.ActionLink("Düzenle", "Edit", new { Uuid = item.Uuid }, new { @class = "btn btn-warning btn-sm btn-icon entypo-pencil" }) 
                                        </td>
                                    }

                                </tr>
                             }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>