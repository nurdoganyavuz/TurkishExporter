@model KobiAsITS.Models.Role

@{
    ViewData["Title"] = "Rol Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script src="~/pageScripts/Roles/Create.js"></script>
}

<nav aria-label="...">
    <div class="pager">
        <a href="/Roles/Index" class="btn btn-primary"><span aria-hidden="true">&larr;</span> Geri</a>
    </div>
</nav>
<h1 style="text-align:left">Rol Kayıt</h1>

<form asp-action="Create">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Rol Bilgileri </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <!--TEMA ARALIĞI BAŞLANGIÇ-->
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Rol Adı</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="text-align:right">
                        <input type="submit" href="javascript:void(0);" value="Ekle" class="btn btn-danger btn-icon entypo-pencil btncreate" />
                    </div>
                </div>

                <!--TEMA ARALIĞI BİTİŞ-->

            </div>
        </div>
    </div>

</form>