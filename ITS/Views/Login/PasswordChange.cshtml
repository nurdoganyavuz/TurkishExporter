@model KobiAsITS.ViewModels.PasswordChangeViewModel
@{
    ViewData["Title"] = "Talep Takip Sistemi";
    Layout = "";
}
<!DOCTYPE html>
<html>


<none>
    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Talep Takip Sistemi Giriş Sayfası</title>
        <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
        <link href="~/assets/font-awesome/css/font-awesome.css" rel="stylesheet">

        <link href="~/assets/css/animate.css" rel="stylesheet">
        <link href="~/assets/css/style.css" rel="stylesheet">

    </head>

    <body class="gray-bg">
        <div class="middle-box text-center loginscreen animated fadeInDown">
            <div>
                <div>

                    <h1 class="logo-name">TE</h1>

                </div>
                <h3>Talep Takip Sistemine Hoşgeldiniz!</h3>

                @if (ViewBag.Error != null)
                {
                    <p class="text-muted text-center">
                        <div class="alert alert-danger alert-dismissable">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            @ViewBag.Error
                        </div>
                    </p>
                }
                else if (ViewBag.Success != null)
                {
                    <p class="text-muted text-center">
                        <div class="alert alert-success alert-dismissable">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            @ViewBag.Success
                        </div>
                    </p>
                }
                else
                {
                    <p>Yeni şifrenizi giriniz.</p>
                    <form class="m-t" asp-action="PasswordChange" asp-controller="Login" method="post">
                        <div class="form-group">
                            <input asp-for="ResetPasswordCode" class="form-control" readonly>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Yeni Şifreniz" required="">
                        </div>
                        <div class="form-group">
                            <input asp-for="PasswordRepeat" type="password" class="form-control" placeholder="Yeni Şifreniz Tekrar" required="">
                        </div>
                        <button type="submit" class="btn btn-primary block full-width m-b">Şifreyi Değiştir</button>
                    </form>
                }
                <a asp-action="Index" asp-controller="Login"><small>Giriş Yap</small></a>
                <p class="m-t"> <small>Talep Takip Yazılımı &copy; @DateTime.Now.Year</small> </p>
            </div>
        </div>

        <!-- Mainly scripts -->
        <script src="~/assets/js/jquery-3.1.1.min.js"></script>
        <script src="~/assets/js/popper.min.js"></script>
        <script src="~/assets/js/bootstrap.js"></script>

    </body>


    <none>
</html>

