@model KobiAsITS.Models.Department

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script src="~/pageScripts/Departments/Create.js"></script>
}

<nav aria-label="...">
    <div class="pager">
        <a href="/Departments/Index" class="btn btn-primary"><span aria-hidden="true">&larr;</span> Geri</a>
    </div>
</nav>
<h1>Departman Ekleme</h1>

<hr />
<form id="createform" name="createform" method="post" asp-action="Create">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Departman Bilgileri </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <!--TEMA ARALIĞI BAŞLANGIÇ-->

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">

                        <label asp-for="DepartmentName" class="control-label">Departman Adı</label>
                        <input asp-for="DepartmentName" class="form-control" autocomplete="off" required />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>

                    <br />

                    <div class="form-group" style="text-align:right">
                        <input type="submit" href="javascript:void(0);" value="Ekle" class="btn btn-danger btn-icon entypo-pencil btncreate" />
                    </div>

                    <!--TEMA ARALIĞI BİTİŞ-->

                </div>
            </div>
        </div>
    </div>
</form>