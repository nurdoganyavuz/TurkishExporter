@model KobiAsITS.Models.Department

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script>
        $(document).click(function () {
            $('.btncreate').click(function () {

                swal("Başarılı!", "Departman eklendi.", "success");
                $("#createform").submit();

            });
        });
    </script>
}

<nav aria-label="...">
    <div class="pager">
        <a href="/Departments/Index" class="btn btn-primary"><span aria-hidden="true">&larr;</span> Geri</a>
    </div>
</nav>
<h1>Departman Ekleme</h1>

<hr />
<form id="createform" name="createform" method="post" asp-action="Create">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Departman Bilgileri </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <!--TEMA ARALIĞI BAŞLANGIÇ-->

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">

                        <label asp-for="DepartmentName" class="control-label">Departman Adı</label>
                        <input asp-for="DepartmentName" class="form-control" autocomplete="off" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CreateDate" class="control-label">Oluşturulma Tarihi</label>
                        <input asp-for="CreateDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" type="date" readonly />
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>

                    <br />

                    <div class="form-group" style="text-align:right">
                        <a href="javascript:void(0);" class="btn btn-danger btn-icon entypo-pencil btncreate">Ekle</a>
                    </div>

                    <!--TEMA ARALIĞI BİTİŞ-->

                </div>
            </div>
        </div>
    </div>
</form>