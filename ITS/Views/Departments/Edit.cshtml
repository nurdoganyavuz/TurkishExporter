@model KobiAsITS.Models.Department

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts
{
    <script>
        $(document).click(function () {
            $('.btnupdate').click(function () {
                swal({
                    title: "Düzenleme Onayı",
                    text: "Değişiklikler kaydedilsin mi?",
                    type: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#DD6B55",
                    confirmButtonText: "Evet",
                    cancelButtonText: "İptal",
                    closeOnConfirm: false
                }, function () {
                        swal("Güncellendi!", "Yapılan değişiklikler kaydedildi.", "success");
                        $("#editform").submit();
                });
            });
        });
    </script>
}

<nav aria-label="...">
    <div class="pager">
        <a href="/Departments/Index" class="btn btn-primary"><span aria-hidden="true">&larr;</span> Geri</a>
    </div>
</nav>

<h1>Düzenle</h1>
<div class="row">
    <div class="col-lg-6">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>Departman Bilgileri</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                <form id="editform" name="editform" method="post" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Uuid" />
                    <input type="hidden" asp-for="CreateDate" />
                    <div class="form-group">
                        <label asp-for="DepartmentName" class="control-label">Departman Adı</label>
                        <input asp-for="DepartmentName" class="form-control" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>

                    <label style="text-align:left">
                        Durum

                        <div class="custom-control custom-switch" style="text-align:center">
                            <input type="checkbox" class="custom-control-input" id="customSwitch1" asp-for="Status" />
                            <label class="custom-control-label" for="customSwitch1">
                            </label>
                        </div>
                    </label>
                        
                    <div class="form-group" style="text-align:right">
                        <a href="javascript:void(0);" class="btn btn-danger btn-icon entypo-pencil btnupdate">Güncelle</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
