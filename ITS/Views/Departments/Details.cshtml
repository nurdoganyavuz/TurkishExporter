@model KobiAsITS.Models.Department

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="...">
    <div class="pager">
        <a href="/Departments/Index" class="btn btn-primary"><span aria-hidden="true">&larr;</span> Geri</a>
    </div>
</nav>

<h1>Detaylar</h1>
<form asp-action="Details">
    <div class="row">
        <div class="col-lg-6">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Departman</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Uuid" />


                    <div class="form-group  row">
                        <label asp-for="DepartmentName" class="col-sm-4 col-form-label">Departman Adı</label>

                        <div class="col-sm-8">
                            <input asp-for="DepartmentName" class="form-control" readonly />
                            <span asp-validation-for="DepartmentName" class="text-danger" disabled></span>
                        </div>
                    </div>

                    <div class="form-group  row">
                        <label asp-for="CreateDate" class="col-sm-4 col-form-label">Oluşturulma Tarihi</label>

                        <div class="col-sm-8">
                            <input type="date" asp-for="CreateDate" class="form-control" readonly />
                            <span asp-validation-for="CreateDate" class="text-danger" disabled></span>
                        </div>
                    </div>
                    <div class="form-group  row">
                        <label asp-for="Status" class="col-sm-4 col-form-label">Aktiflik Durumu</label>

                        <div class="col-sm-8">

                            <label asp-validation-for="Status" class="text-danger" disabled>
                                @Html.DisplayFor(model => model.Status)
                            </label>
                        </div>
                    </div>

                    <nav aria-label="..." style="text-align:right">
                        <div class="pager">
                            <a href="/Departments/Edit?Uuid=@Model.Uuid" class="btn btn-primary"><span aria-hidden="true"></span>Düzenle</a>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</form>